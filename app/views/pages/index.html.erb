<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Likes</th>
        <th>Category</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
        <% @pages.each_with_index do |page, index| %>
        <tr>
        <td><%= index + 1 %></td>
        <td><a href="<%= page.url %>"><%= page.name %></a></td>
        <td><a href="http://facebook.com/<%= page.fb_page %>"><%= page.likes %></a></td>
        <td><%= page.category %></td>
        <td><%= page.description %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<div id="addbutton" class="offset1">
   <%= link_to "Add New Page", new_page_path, :class => "btn btn-primary" %>
</div>