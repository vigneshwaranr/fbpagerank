<div class="content">

<%= form_for Page.new, :html => { :class => "form-horizontal" } do |f| %>
    <fieldset>
        <legend>Add a new page to track</legend>
        <% for field in [:name, :url, :fb_page, :description] %>
        <div class="form-group">
            <%= f.label field, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.text_field field, class: "form-control" %></p>
            </div>
        </div>
        <% end %>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Add Page", class: "btn btn-primary" %>
                <%= link_to " Cancel ", pages_path, :class => "btn btn-default" %>
            </div>
        </div>
    </fieldset>
<% end %>
</div>